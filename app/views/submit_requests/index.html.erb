<div class="container">
  <div class="wrapper col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">
    <p id="notice"><%= notice %></p>

    <h1>依頼中タスク一覧</h1>

    <table>
      <thead>
        <tr>
          <th>ユーザー</th>
          <th>タイトル</th>
          <th>メッセージ</th>
          <th>リクエストしているユーザー</th>
          <th>状況</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @submit_requests.each do |submit_request| %>
          <tr>
            <td><%= submit_request.user.name %></td>
            <td><%= submit_request.task.title %></td>
            <td><%= submit_request.message %></td>
            <td><%= submit_request.request_user_id %></td>
            <td><%= submit_request.status == 1?"対応中" : "未着手" %></td>
            <td><%= link_to '詳細', submit_request ,class: 'btn btn-default btn-sm btn-primary' %></td>
            <td><%= link_to '編集', edit_submit_request_path(submit_request) ,class: 'btn btn-default btn-sm btn-success'%></td>
            <td><%= link_to '削除', submit_request, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-default btn-sm btn btn-danger'%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to '新しくタスク依頼する', new_submit_request_path , class: 'btn btn-default btn-sm btn-primary' %>
  </div>
</div>
