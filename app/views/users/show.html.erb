<div class="container">
  <h2><%= @user.email %>をフォローしているユーザー</h2>
  <% @user.followers.each do |user| %>
      <div class="container-child col-md-4 col-sm-4 col-xs-6 ">
        <%= profile_img(user)%>
        <%= user.email  %>
      </div>
</div>

<div class="container">
  <h2><%= @user.email %>がフォローしているユーザー</h2>
        <% @user.followed_users.each do |user| %>
            <div class="container-child col-md-4 col-sm-4 col-xs-6 ">
              <%= profile_img(user)%>
              <%= user.email  %>
            </div>
        <% end %>
  <% end %>
</div>
</div>
