
<div class="container">
  <div class="wrapper col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">
　　<p id="notice"><%= notice %></p>

    <h1>タスク一覧</h1>
      <table class="table">
        <thead>
          <tr>
            <th>ユーザー</th>
            <th>タイトル</th>
            <th>内容</th>
            <th>締め切り</th>
            <th>担当者</th>
            <th>完了/未完了</th>
            <th>状況</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @tasks.each do |task| %>

            <tr>
              <td><%= task.user.name %></td>
              <td><%= task.title %></td>
              <td><%= task.content %></td>
              <td><%= task.deadline.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
              <td><%= task.charge.name %></td>
              <td><%= if task.done? then "完了" else "未完了" end %></td>
              <td><%= task.status == 1?"対応中" : "未着手" %></td>
              <td><%= link_to '詳細', user_task_path(task.user,task) ,class: 'btn btn-default btn-sm btn-primary' ,class: 'btn btn-default btn-sm btn-primary'%></td>
              <td><%= link_to '編集', edit_user_task_path(task.user, task) ,class: 'btn btn-default btn-sm btn-success',class:'btn btn-default btn-sm btn-success'%></td>
              <td><%= link_to '削除', user_task_path(task.user, task), method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-default btn-sm btn btn-danger'  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <br>
    <%= link_to 'タスクを作成する', new_user_task_path(@user), class: 'btn btn-default btn-sm btn-primary'  %>
  </div>
</div>
